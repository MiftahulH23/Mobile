<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    >

    <RelativeLayout
        android:id="@+id/rl_klik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gambar_movie"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/judul_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/gambar_movie"
            android:text="@string/judulmovie"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/sinopsis_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul_movie"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/gambar_movie"
            android:text="@string/sinopsis"
            android:textColor="#000000"
            android:textSize="14sp"

            />
        <TextView
            android:id="@+id/rating_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sinopsis_movie"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/gambar_movie"
            android:text="@string/rating"
            android:textColor="#000000"
            android:textSize="14sp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>